<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/SandyBrown"
    tools:context=".MainActivity">



   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="CALCULATOR"
       android:textSize="30dp"
       android:fontFamily="sans-serif-black"
       android:background="@color/Sienna"
       android:textColor="@color/Gainsboro"
       android:textStyle="italic"
       android:gravity="center"/>

    <TextView
        android:id="@+id/textv"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/Ivory"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:backgroundTint="@color/DarkRed"
            android:layout_height="wrap_content"
            android:text="Type 2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:backgroundTint="@color/Red"
            android:text="HISTORY"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="-15dp">

        <Button
            android:id="@+id/button_1"
            android:layout_width="2dp"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:backgroundTint="@color/SaddleBrown"
            android:textStyle="italic"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="2"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/SaddleBrown"
            android:layout_marginRight="3dp"
            android:textStyle="italic"
            android:textSize="25dp"
            android:text="3" />

        <Button
            android:id="@+id/button_CLR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Crimson"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:text="C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-17dp">

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="4" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="6" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/SaddleBrown"
            android:text="+"
            android:textSize="25dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="-17dp">

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="9" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/SaddleBrown"
            android:layout_marginRight="3dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-17dp">

        <Button
            android:id="@+id/button_dt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:text="."
            android:textSize="25dp"
            android:backgroundTint="@color/SaddleBrown"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:textSize="25dp"
            android:text="0" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="/" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:backgroundTint="@color/SaddleBrown"
            android:text="*" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-13dp"/>

    <Button
        android:id="@+id/button_ans"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/FireBrick"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:textSize="25dp"
        android:text="=" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>


